			MSP U/I
		</metadata>
				
	</metadatalist>


	<!--INLETS-->
	
	<inletlist>
		
		<inlet id="0" name="INLET_NAME">
			<digest>
				(signal) Input Between 0-1 to Meter
			</digest>
			<description>
				TEXT_HERE
			</description>
		</inlet>
		
	</inletlist>


	<!--OUTLETS-->
	
	<outletlist>
		
	</outletlist>


	<!--ARGUMENTS-->
	
	<objarglist>
		
		<objarg id="0" name="OBJARG_NAME" type="OBJARG_TYPE" optional="0">
			<digest>
				TEXT_HERE
			</digest>
			<description>
				TEXT_HERE
			</description>
		</objarg>
		
	</objarglist>


	<!--MESSAGES-->
	
	<methodlist>
		
		<method name="bang">
			<arglist />
			<digest>
				TEXT_HERE
			</digest>
			<description>
				<m>bang</m> clears peak indication.
			</description>
		</method>
		
		<method name="int">
			<arglist>
				<arg name="input" type="int" optional="0" id="0" />
			</arglist>
			<digest>
				TEXT_HERE
			</digest>
			<description>
				Converted to <m>float</m>.
			</description>
		</method>
		
		<method name="float">
			<arglist>
				<arg name="input" type="float" optional="0" id="0" />
			</arglist>
			<digest>
				TEXT_HERE
			</digest>
			<description>
				A <m>float</m> value will set the meter to react as though a <m>signal</m> with equal amplitude peak-value has been passed to its input. 
			</description>
		</method>
		
		<method name="signal">
			<arglist />
			<digest>
				TEXT_HERE
			</digest>
			<description>
				The peak amplitude of the incoming signal is displayed by the on-screen level meter according to a logartihmic scale.
			</description>
		</method>
		
		<method name="(mouse click)">
			<digest>
				TEXT_HERE
			</digest>
			<description>
				Mouse clicking on the GUI meter in a locked patch clears the peak indication in the same way as the <m>bang</m> message.
			</description>
		</method>
		
	</methodlist>


